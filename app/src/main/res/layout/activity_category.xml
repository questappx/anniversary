<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Extras.CategoryActivity">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:visibility="gone"
        android:background="@color/mainAppColor">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_10sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/_13sdp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/localAdLayout"
        android:layout_below="@id/title"
        android:layout_height="@dimen/_140sdp"
        android:background="@color/black"
        >

        <ImageView
            android:id="@+id/feature_place"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.5"
            android:background="@drawable/feature_wedding" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/yellow"
            android:padding="@dimen/_2sdp"
            android:text="AD"
            android:textSize="@dimen/_9sdp"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_45sdp"
                android:id="@+id/localAdIcon"
                android:layout_height="@dimen/_45sdp"
                android:src="@drawable/wedding_icon" />

            <TextView
                android:id="@+id/localAdText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="Wedding Photo Editor"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp" />

        </LinearLayout>




    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_below="@id/localAdLayout"
        android:layout_alignParentBottom="true"
        android:weightSum="3"
        >


            <TextView
                android:id="@+id/squareFramesBtn"
                android:layout_width="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_height="@dimen/_100sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:text="Square Frames"
                android:elevation="@dimen/_10sdp"
                android:background="@drawable/border_card"
                android:padding="@dimen/_25sdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp"
                android:gravity="center"
                />



            <TextView
                android:id="@+id/portraitFramesBtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:text="Portrait Frames"
                android:elevation="@dimen/_10sdp"
                android:padding="@dimen/_20sdp"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:textSize="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/border_card"
                android:gravity="center"
                />

        <TextView
            android:id="@+id/invitaionCardBtn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:elevation="@dimen/_10sdp"
            android:text="Invitation Cards"
            android:padding="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/border_card"
            android:gravity="center"
            />

    </LinearLayout>

</RelativeLayout>